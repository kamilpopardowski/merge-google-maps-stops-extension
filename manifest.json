{
    "manifest_version": 3,
    "name": "Merge google maps stops extension",
    "description": "Merging google maps stops from given urls that way you can add many more stops then 10",
    "version": "1.0.0",
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/maps/*",
                "https://maps.google.com/*"
            ],
            "js": [
                "mapsHintContent.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "dist/background.js"
    },
    "action": {
        "default_popup": "./dist/index.html"
    }
}
